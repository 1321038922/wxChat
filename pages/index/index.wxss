/**index.wxss**/
.index .slide-image{
  width:710rpx;
  height:350rpx;
}

.content-item{
  margin-top: 40rpx;

}

.content-item .title{
  font-size: 16px;
  padding-left: 20rpx;
  border-left: 2px solid #000;
  line-height: 32rpx;
  height: 32rpx;
}
.content-item .content{
  margin-top: 40rpx;
  display: flex;
  justify-content: space-between;
}

.content .box-l .img{
  width: 250rpx;
  height: 300rpx;
}
.box-r .book-title{
  font-size: 16px;
  color: #333;
}

.box-r{
  padding-bottom: 10rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.box-r .book-desc{
  padding-top: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  color: #444;
  font-size: 14px;
  line-height: 1.5;
}

.box-r .author{
   display: flex;
  height: 20rpx;
  font-size: 12px;
  justify-content: space-between;
}
