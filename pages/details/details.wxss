/* pages/details/details.wxss */
.details .book-details{
  padding: 20rpx 20rpx 40rpx 20rpx;
  border-bottom: 8rpx solid #E9E9E9
}

.book-t{
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #444;
}
.book-t .img {
  width: 220rpx;
  height: 280rpx;
} 
.book-t .main-msg {
   margin-left: 40rpx;
   display: flex;
   flex-direction: column;
   justify-content: space-between;
}
.book-t .title{
   color: #333;
   font-weight: 700;
   font-size: 14px;
}
.book-b {
   display: flex;
   justify-content: space-between;
   margin-top:50rpx; 
}
.book-b .btn{
   color: #333;
   border: 1px solid #e9e9e9;
   margin: 0;
   width: 300rpx;
   font-size: 12px;
   background-color: #e9e9e9;
}

/* 简介部分 */

.book-desc .title{
   font-weight: bold;
   font-size: 15px;

}

.book-desc {
   border-bottom: 4px solid #e9e9e9;
   padding:30rpx 20rpx;
   font-size: 12px;
   line-height: 1.5;
}

.book-desc .desc-main{
   font-size: 12px;
   color: #333;
   margin-top: 50rpx;
}
/* 查看目录 */

.book-catalog {
   padding: 0 20rpx;
   display: flex;
   justify-content: space-between;
   line-height: 100rpx;
   height: 100rpx;
   border-bottom: 4px solid #e9e9e9;
}


.book-catalog .catalog-l{
   width: 220rpx;
   display: flex;
   justify-content: space-between;
}

.book-catalog .catalog-l .show-catalog{
   font-size: 15px;
   font-weight: 700;
   color: #333;
}
.catalogs{
   font-size: 12px;
   color: #444;
   
}

.update-time {
   font-size: 10px;
   color: #444;
}
.btn-wrap-b{
   position: absolute;
   bottom: 20rpx;
   left: 24rpx;
   right: 24rpx;
}
.btn-wrap-b button{
   background-color: #409fff;
   height: 80rpx;
   line-height: 80rpx;
   font-size: 12px;
   color: white;
}